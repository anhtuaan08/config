#!name = Locket
#!desc = Kích hoạt Locket Gold
#!author = Anh Tuấn

[Header Rewrite]
# Xóa header RevenueCat để tránh bị phát hiện
^https?://api.revenuecat.com/.+/(receipts$|subscribers/?(.*?)*$) header-del x-revenuecat-etag
^https?://api.revenuecat.com/.+/(receipts$|subscribers/?(.*?)*$) header-del X-RevenueCat-ETag

[Script]
# Locket - RevenueCat Script
revenuecat = type=http-response,pattern=^https:\/\/api\.revenuecat\.com\/.+\/(receipts$|subscribers\/[^/]+$),requires-body=true,max-size=-1,timeout=60,script-path=https://raw.githubusercontent.com/anhtuaan08/config/refs/heads/main/module/js/locket15s.js

# Locket - Xóa header bổ sung
deleteHeader = type=http-request,pattern=^https:\/\/api\.revenuecat\.com\/.+\/(receipts|subscribers),script-path=https://raw.githubusercontent.com/anhtuaan08/config/refs/heads/main/module/js/head.js,timeout=60

[MITM]
hostname = %APPEND%, api.revenuecat.com